{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/TerrainGen.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/TerrainGen.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "godot",
            "type": "shell",
            "args": [
                "--path",
                "${workspaceFolder}"
            ],
            "problemMatcher": [],
            "dependsOn": ["build"]
        }
    ]
}
